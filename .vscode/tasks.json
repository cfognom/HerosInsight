{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build + Install",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "--preset", "${command:cmake.activeConfigurePresetName}",
                "--config", "${command:cmake.buildType}"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
