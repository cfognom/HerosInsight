{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build + Install",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "--preset", "${command:cmake.activeConfigurePresetName}",
                "--config", "${command:cmake.buildType}",
                "--installdir"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build + Install (fresh)",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py",
                "--preset", "${command:cmake.activeConfigurePresetName}",
                "--config", "${command:cmake.buildType}",
                "--installdir",
                "--fresh"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Launch GW + Mod",
            "type": "shell",
            "command": "python",
            "args": [
                "launch.py",
                "${command:cmake.buildDirectory}/${command:cmake.buildType}/HerosInsight/Launch_HerosInsight.exe"
            ],
            "problemMatcher": []
        }
    ]
}
