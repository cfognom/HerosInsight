{
    "version": 10,
    "configurePresets": [
        {
            "name": "dev",
            "description": "Development Build. Use MSVC Win32 with vcpkg.",
            "generator": "Visual Studio 17 2022",
            "architecture": "Win32",
            "binaryDir": "build/dev",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x86-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
            }
        },
        {
            "name": "prod",
            "description": "Production build. Use MSVC Win32 with vcpkg.",
            "inherits": "dev",
            "binaryDir": "build/prod",
            "cacheVariables": {
                "PRODUCTION_BUILD": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev_debug",
            "configurePreset": "dev",
            "configuration": "Debug"
        },
        {
            "name": "dev_release",
            "configurePreset": "dev",
            "configuration": "Release"
        },
        {
            "name": "dev_relwithdebinfo",
            "configurePreset": "dev",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "prod_relwithdebinfo",
            "configurePreset": "prod",
            "configuration": "RelWithDebInfo"
        }
    ],
    "packagePresets": [
        {
            "name": "prod_relwithdebinfo_zip",
            "description": "Creates a zip file ready to be released.",
            "configurePreset": "prod",
            "configurations": [
                "RelWithDebInfo"
            ],
            "generators": [
                "ZIP"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "prod_relwithdebinfo_zip",
            "steps": [
                {
                    "type": "configure",
                    "name": "prod"
                },
                {
                    "type": "build",
                    "name": "prod_relwithdebinfo"
                },
                {
                    "type": "package",
                    "name": "prod_relwithdebinfo_zip"
                }
            ]
        }
    ]
}